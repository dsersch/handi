<div class="col-sm-6 col-sm-offset-3">
    <% if(message.length) { %>
        <div class="alert alert-danger">
            <%= message %>
        </div>    
    <% } %>
        
    <h1>Edit User</h1>

    <form action="/users/<%= user.id %>/edit?_method=PATCH" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="userName" value="<%= user.userName %>">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" value="<%= user.email %>">
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Update</button>
    </form>
    <form action="/users/<%= user.id %>?_method=DELETE" method="post">
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
    </form>
    <a href="/profile" class="btn btn-primary btn -lg">Go Back</a>
</div>